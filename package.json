{
	"name": "@janiscommerce/app-check-updates",
	"version": "3.1.0",
	"license": "ISC",
	"scripts": {
		"android": "react-native run-android",
		"ios": "react-native run-ios",
		"start": "react-native start",
		"lint": "eslint .",
		"test": "jest",
		"prepare": "husky install",
		"validate:code": "npm run lint -- --fix && tsc --noEmit && npm t",
		"test:commit": "jest --colors --bail --findRelatedTests",
		"test:coverage": "tsc --noEmit && jest --collectCoverage",
		"build": "rm -rf dist && tsc"
	},
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"lint-staged": {
		"*{js,jsx,ts,tsx}": [
			"prettier --write",
			"eslint --fix"
		],
		"*.{js,jsx,ts,tsx}": [
			"npm run test:commit"
		]
	},
	"resolutions": {
		"@types/react": "^17"
	},
	"peerDependencies": {
		"@janiscommerce/app-crashlytics": ">=2.1.0",
		"react": ">=17.0.2",
		"react-native": ">=0.67.5",
		"react-native-fs": ">=2.20.0",
		"sp-react-native-in-app-updates": "1.2.0"
	},
	"devDependencies": {
		"@babel/core": "^7.12.9",
		"@babel/preset-env": "^7.22.7",
		"@babel/runtime": "^7.12.5",
		"@janiscommerce/app-crashlytics": "^2.1.0",
		"@react-native-community/eslint-config": "^2.0.0",
		"@types/jest": "^29.5.3",
		"@types/node": "^20.5.7",
		"@types/react-native": "^0.63.2",
		"babel-jest": "^26.6.3",
		"eslint": "7.14.0",
		"husky": "^7.0.4",
		"jest": "^26.6.3",
		"lint-staged": "^13.2.3",
		"metro-react-native-babel-preset": "^0.66.2",
		"react": "17.0.2",
		"react-native": "0.67.5",
		"react-native-fs": "^2.20.0",
		"react-test-renderer": "17.0.2",
		"typescript": "^5.1.6"
	}
}
